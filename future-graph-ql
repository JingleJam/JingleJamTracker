query get_team_by_slug($slug: String!) {
  team(slug: $slug) {
    id
    name
    slug
    description
    createdAt
    totalAmountRaised {
      currency
      value
    }
    publishedCampaigns(first: 20) {
      edges {
        node {
          ...campaignProfileAttributes
        }
      }
    }
    retiredCampaigns(first: 12) {
      edges {
        node {
          ...campaignProfileAttributes
        }
      }
    }
  }
}

fragment campaignProfileAttributes on Campaign {
  publicId
  name
  slug
  live
  goal {
    value
    currency
  }
  totalAmountRaised {
    value
    currency
  }
  cause {
    id
    name
    slug
  }
  fundraisingEvent {
    name
    slug
    publicId
    amountRaised {
      currency
      value
    }
  }
  publicId
  slug
  cause {
    slug
    name
  }
  rewards {
    quantity
    remaining
  }
  topDonation {
    id
    amount {
      currency
      value
    }
    donorName
    donorComment
    completedAt
  }
  publishedAt
}
